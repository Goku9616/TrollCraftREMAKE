package com.goku9616.TrollCraftREMAKE.blocks;

import java.util.Random;

import com.goku9616.TrollCraftREMAKE.TrollCraftREMAKE;

import net.minecraft.block.Block;
import net.minecraft.block.material.Material;
import net.minecraft.init.Items;
import net.minecraft.item.Item;

public class TrollLapisOre extends Block{
	public TrollLapisOre(){
		super(Material.rock);
		setHardness(3F);
		setHarvestLevel("pickaxe", 2);
		setBlockName("TrollRedstoneOre");
		this.setBlockTextureName("minecraft:redstone_ore");
	}
	@Override
	public Item getItemDropped(int p_149650_1_, Random rnd, int p_149650_3_)
    {
        return Item.getItemById(38);
    }
}
